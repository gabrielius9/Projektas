<%= render 'shared/errors', obj: @article %>


<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <div id="labels"><%= f.label "Straipsnio pavadinimas:" %></div>
        </div>


        <div class="col-sm-8">
          <div id="labels"><%= f.text_field :title, class: "form-control", placeholder: "Įrašykite straipsnio pavadinimą.", autofocus: true %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <div id="labels"> <%= f.label "Straipsnio aprašymas:" %></div>
        </div>
        <div class="col-sm-8">
          <div id="labels"> <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Įrašykite, tai ką norite parašyti." %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div id="labels"> <%= f.submit class: "btn btn-primary btn-lg" %></div>
        </div>
      </div>

    <% end %>
<div class="col-xs-4 col-xs-offset-4">
  <div id="box"> [ <%= link_to "Atšaukti ir grįžti prie visų temų", articles_path %> ] </div>
</div>
  </div>
</div>
